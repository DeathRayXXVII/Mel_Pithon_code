global proc Calculator(int $num, int $num2, int $operation)
{
    if ($operation == 1)
    {
        //print($num + "+ " + $num2 + "= " + Addition($num,$num2) + "\n");
        Addition($num,$num2);
    }
    else if ($operation == 2)
    {
        Subtraction($num,$num2);
    }
    else if ($operation == 3)
    {
        Multiplication($num,$num2);
    }
    else if ($operation == 4)
    {
        Division($num,$num2);
    }
    else if ($operation == 5)
    {
        Power($num,$num2);
    }
    else if ($operation == 6)
    {
        Mean($num,$num2);
    }
    else if ($operation == 7)
    {
        Median($num,$num2);
    }
    else{
        print("Please input a number from 1 -7 after your arrary of numbers!! \n");
    }
}
