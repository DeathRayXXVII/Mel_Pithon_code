global proc Division(int $num, int $num2)
{
    int $result = $num /= $num2;
    print ($result);
}
//Division(18,6);

global proc Power(int $num, int $num2)
{
    int $result = pow ($num, $num2);
    print ($result);
}
//Power(4,3);

global proc Mean(int $num, int $num2)
{
    int $result = ($num += $num2) / 2;
    print ($result);
}
